{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "FLOWMODE",
  "version": "0.2.1",
  "identifier": "com.flowmode.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "FLOWMODE",
        "width": 1280,
        "height": 1000,
        "resizable": false,
        "fullscreen": false,
        "center": true,
        "visible": true,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/32x32.png",
      "iconAsTemplate": true
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "active": true,
      "dialog": true,
      "endpoints": [
        "https://github.com/yusheer0/flowmode/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDM5RjE5MjNDRENGMjIwNUEKUldSYUlQTGNQSkx4T2UxV0VPRGhPcFpEcEZQSUpYdzdPL3hodFdDYWFtdDArRldkalNhY25peWgK"
    }
  }
}
